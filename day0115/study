INSERT INTO tasks(title, start_date, due_date, description) VALUES("타이틀1", "2026-01-15", "2026-01-15", "tasks 테이블 데이터 입력");

create table dept (
  deptno int(2) primary key, #unique, not null 
  dname varchar(20) not null,
  loc varchar(20) 
);

INSERT INTO dept
VALUES
	(10, 'ACCOUNTING', 'NEW YORK'),
        (20, 'RESEARCH', 'DALLAS'),
	(30, 'SALES', 'CHICAGO'),
	(40, 'OPERATING', 'BOSTON');

create table emp (
  empno int(4) primary key,
  ename varchar(10) not null,
  job varchar(20) not null,
  mgr int(4),
  hiredate date,
  sal int(8),
  comm int(8),
  deptno int(2),
  FOREIGN KEY fk_dept(deptno) REFERENCES dept(deptno)
);

